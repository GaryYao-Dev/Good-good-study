<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">




    <servlet>
        <servlet-name>PostMessageServlet</servlet-name>
        <servlet-class>main.control.PostMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostMessageServlet</servlet-name>
        <url-pattern>/postmessage</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>UploadNewPostServlet</servlet-name>
        <servlet-class>main.control.UploadNewPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadNewPostServlet</servlet-name>
        <url-pattern>/uploadnewpost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LikePostServlet</servlet-name>
        <servlet-class>main.control.LikePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikePostServlet</servlet-name>
        <url-pattern>/likepost</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UnlikePostServlet</servlet-name>
        <servlet-class>main.control.UnlikePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnlikePostServlet</servlet-name>
        <url-pattern>/unlikepost</url-pattern>
    </servlet-mapping>
         
         
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>main.control.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

         

    <welcome-file-list>
        <welcome-file>userhomepage.jsp</welcome-file>
    </welcome-file-list>




</web-app>
