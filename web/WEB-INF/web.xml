<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">




    <servlet>
        <servlet-name>PostMessageServlet</servlet-name>
        <servlet-class>main.control.PostMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostMessageServlet</servlet-name>
        <url-pattern>/postmessage</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>UploadNewPostServlet</servlet-name>
        <servlet-class>main.control.UploadNewPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadNewPostServlet</servlet-name>
        <url-pattern>/uploadnewpost</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LikePostServlet</servlet-name>
        <servlet-class>main.control.LikePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikePostServlet</servlet-name>
        <url-pattern>/likepost</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UnlikePostServlet</servlet-name>
        <servlet-class>main.control.UnlikePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnlikePostServlet</servlet-name>
        <url-pattern>/unlikepost</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>AddFriendServlet</servlet-name>
        <servlet-class>main.control.AddFriendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFriendServlet</servlet-name>
        <url-pattern>/addfriend</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindFriendsServlet</servlet-name>
        <servlet-class>main.control.FindFriendsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindFriendsServlet</servlet-name>
        <url-pattern>/findfriends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CancelFriendRequestServlet</servlet-name>
        <servlet-class>main.control.CancelFriendRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancelFriendRequestServlet</servlet-name>
        <url-pattern>/cancelfriendrequest</url-pattern>
    </servlet-mapping>
         
         
    <servlet>
        <servlet-name>FriendConfirmServlet</servlet-name>
        <servlet-class>main.control.FriendConfirmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FriendConfirmServlet</servlet-name>
        <url-pattern>/friendConfirm</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>homepageFriendsServlet</servlet-name>
        <servlet-class>main.control.homepageFriendsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homepageFriendsServlet</servlet-name>
        <url-pattern>/homepagefriends</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>LoginOutServlet</servlet-name>
        <servlet-class>main.control.LoginOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>





    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>




</web-app>
